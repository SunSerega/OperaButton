{
	"manifest_version": 3,
	"name": "SunButton for Opera",
	"version": "1.0",
	"description": "Adds a context menu item to consume current page URL",
	"icons": {
		"16": "icons/icon16.png"
	},
	"permissions": [
		"contextMenus",
		"activeTab",
		"nativeMessaging"
	],
	"background": {
		"service_worker": "background.js"
	}
}